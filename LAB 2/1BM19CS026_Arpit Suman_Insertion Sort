#include<stdio.h>
#include<stdlib.h>
#include<time.h>

void insert_sort(int a[], int n) {
	for (int i = 1; i < n; i++) {
		int e = a[i];
		int j = i - 1;
		while (j >= 0 && a[j] > e) {
			a[j + 1] = a[j];
			j--;
		}
		a[j + 1] = e;
	}
}

int main() {
	int n;
	double start, end;
	printf("Enter the number of elements: ");
	scanf("%d", &n);
	int arr[n];
	for (int i = 0; i < n; i++) {
		arr[i] = rand();
	}

	start = clock();
	insert_sort(arr, n);
	end = clock();
	printf("Time taken by insertion sort for %d elements : %f\n", n, ((double)(end - start) / CLOCKS_PER_SEC));

	return 0;
}
